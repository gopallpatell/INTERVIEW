vim docker-compose
version: "3.8"
  services:
    nginx:
      build:          ### or we can directly build the image using image: nginx    but wwe need to copy the file from host           
        context: ./nginx     to container thats why we create dockerfile in github in ./nginx direcory and build in compose.
      nginx_name: nginx
      ports:
        - "80:80"
      restart: always
      depends_on:
        - django
    mysql:
      container_name: mysql
      image: mysql
      ports:
        - "3306:3306"
      environment:
        MYSQL_ROOT_PASSWORD: root
        MYSQL_DATABASE: mysql-db
      volumes: 
        - ./my-volume:/war/lib/mysql
      networks:
        - my-network
      restart: always
      healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-uroot", "-proot"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 60s
    django:
      build:
        context: .    # because the file is in open space not in a directory so . is for PWD
      conatainer_name: django        # conatainer name should be the same that we use in reverse proxy in nginx in  default.conf file "proxy_pass: http/django:8000;
      command: sh -c "python mannage.py migrate --no-input && gunicorn notesapp.wsgi --bind 0.0.0.0:8000"    # gunicorn is a tool that is used to serve the application in 
                                                                                    production and migrate means it will create tables and columbs and no input for not ask  
                                                                                    for yes or no input while creating tables an "sh -c" for shell commands.
      ports: 
        - "8000:8000"
      env_file:                      
        - ".env"      # in env file we give the DB_NAME: test_db,DB_PASSWORD: root,DB_USER: root,DB_PORT:3306,DB_HOST:mysql 
      networks:
        - my-networks 
      restart: always 
      depends_on:
        - mysql
      healthcheck:
      test: ["CMD-SHELL", "curl -f http://localhost:8000/admin || exit 1"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s
      
